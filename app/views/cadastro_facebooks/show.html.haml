- model_class = CadastroFacebook
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @cadastro_facebook.email
%p
  %strong= model_class.human_attribute_name(:senha) + ':'
  %br
  = @cadastro_facebook.senha


= link_to t('.back', :default => t("helpers.links.back")), cadastro_facebooks_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_cadastro_facebook_path(@cadastro_facebook), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), cadastro_facebook_path(@cadastro_facebook), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
