- model_class = Cadastro
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nome)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:dataNascimento)
      %th= model_class.human_attribute_name(:senha)
      %th= model_class.human_attribute_name(:confirmeSenha)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @cadastros.each do |cadastro|
      %tr
        %td= link_to cadastro.id, cadastro_path(cadastro)
        %td= cadastro.nome
        %td= cadastro.email
        %td= cadastro.dataNascimento
        %td= cadastro.senha
        %td= cadastro.confirmeSenha
        %td=l cadastro.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_cadastro_path(cadastro), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), cadastro_path(cadastro), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_cadastro_path, :class => 'btn btn-primary'
