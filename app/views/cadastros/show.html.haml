- model_class = Cadastro
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @cadastro.nome
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @cadastro.email
%p
  %strong= model_class.human_attribute_name(:dataNascimento) + ':'
  %br
  = @cadastro.dataNascimento
%p
  %strong= model_class.human_attribute_name(:senha) + ':'
  %br
  = @cadastro.senha
%p
  %strong= model_class.human_attribute_name(:confirmeSenha) + ':'
  %br
  = @cadastro.confirmeSenha


= link_to t('.back', :default => t("helpers.links.back")), cadastros_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_cadastro_path(@cadastro), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), cadastro_path(@cadastro), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
